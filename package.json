{
  "name": "metalsmith-metadata",
  "description": "A metalsmith plugin to load global metadata from files.",
  "keywords": [
    "metalsmith-plugin",
    "metalsmith",
    "metadata",
    "static-site"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wernerglinka/metalsmith-metadata.git"
  },
  "version": "0.0.3",
  "license": "MIT",
  "main": "lib/index.js",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "auto-changelog": "^2.3.0",
    "chai": "^4.3.6",
    "coveralls": "^3.1.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "metalsmith": "^2.4.1",
    "@metalsmith/layouts": "^2.4.0",
    "metalsmith-in-place": "^4.4.0",
    "jstransformer-markdown": "^1.2.1",
    "jstransformer-nunjucks": "^0.5.0",
    "mocha": "^9.2.0",
    "prettier": "^2.5.1"
  },
  "peerDependencies": {
    "metalsmith": "^2.3.0"
  },
  "scripts": {
    "changelog": "auto-changelog -u date --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --cache --fix-dry-run .",
    "release": "release-it .",
    "test": "mocha ./tests/index.js"
  },
  "engines": {
    "node": ">=8"
  },
  "publishConfig": {
    "access": "public"
  }
}
