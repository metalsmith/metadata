{
  "name": "@metalsmith/metadata",
  "version": "0.1.0",
  "description": "A metalsmith plugin to load global metadata from files and directories",
  "keywords": [
    "metalsmith-plugin",
    "metalsmith",
    "metadata",
    "yaml",
    "json",
    "toml",
    "static-site"
  ],
  "homepage": "https://github.com/metalsmith/metadata#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metalsmith/metadata.git"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib/index.js"
  ],
  "scripts": {
    "changelog": "auto-changelog -u date --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --cache --fix .",
    "lint:check": "eslint --cache --fix-dry-run .",
    "release": "release-it .",
    "test": "nyc mocha -t 5000"
  },
  "dependencies": {
    "debug": "^4.3.3",
    "deepmerge": "^4.2.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "auto-changelog": "^2.3.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "metalsmith": "^2.5.0",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "release-it": "^15.1.4"
  },
  "peerDependencies": {
    "metalsmith": "^2.4.1",
    "toml": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "toml": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
